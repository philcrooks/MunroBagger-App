<?xml version='1.0' encoding='utf-8'?>
<widget id="scot.munrobagger.app" version="0.2.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Munro Bagger</name>
    <description>
        A Cordova app that allows the user to see all the sunny Munros in Scotland at one glance.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Phil Crooks and the Munro Bagger team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="16" />
        <preference name="xwalkVersion" value="xwalk_core_library:23.53.589.4" />
        <preference name="xwalkCommandLine" value="--disk-cache-size=33554432" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
